{
  "manifest_version": 3,
  "name": "Omora",
  "version": "1.0",
  "description": "Base Chrome extension for Omora",
  "icons": {
    "16": "public/icon16.png",
    "32": "public/icon32.png",
    "128": "public/icon128.png"
  },
  "permissions": ["storage", "tabs"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["sidebar.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_title": "Omora",
    "default_icon": {
      "16": "public/icon16.png",
      "32": "public/icon32.png",
      "128": "public/icon128.png"
    }
  }
}
